{
    "name": "PluginCrawler",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "The Smartest crawler with WordPress plugins.",
    "action": {
        "default_popup": "ui.html"
    },
    "permissions": [
        "downloads"
    ],
    "background": {
        "matches": [
            "<all_urls>"
        ],
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}